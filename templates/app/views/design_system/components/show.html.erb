<% content_for :title, @component[:name] %>

<div>
  <!-- Breadcrumb -->
  <nav class="mb-6">
    <ol class="flex items-center space-x-2 text-sm text-olive-600 dark:text-olive-400">
      <li><%= link_to 'Components', design_system_components_path, class: 'hover:text-olive-700 dark:hover:text-olive-300' %></li>
      <li>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </li>
      <li class="text-olive-900 dark:text-olive-100"><%= @component[:name] %></li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="mb-12">
    <div class="flex items-center gap-3 mb-4">
      <h1 class="text-4xl font-display font-bold text-olive-900 dark:text-olive-100">
        <%= @component[:name] %>
      </h1>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-olive-100 text-olive-700 dark:bg-olive-800 dark:text-olive-300">
        <%= @component[:category] %>
      </span>
    </div>
    <p class="text-lg text-olive-700 dark:text-olive-300">
      <%= @component[:description] %>
    </p>
    <p class="text-sm text-olive-500 dark:text-olive-400 mt-2 font-mono">
      <%= @component[:class_name] %>
    </p>
  </div>

  <!-- Parameters -->
  <div class="mb-12">
    <h2 class="text-2xl font-display font-bold text-olive-900 dark:text-olive-100 mb-6">
      Parameters
    </h2>
    <div class="overflow-hidden rounded-lg border border-olive-200 dark:border-olive-800">
      <table class="min-w-full divide-y divide-olive-200 dark:divide-olive-800">
        <thead class="bg-olive-50 dark:bg-olive-900">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-olive-700 dark:text-olive-300 uppercase">Name</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-olive-700 dark:text-olive-300 uppercase">Type</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-olive-700 dark:text-olive-300 uppercase">Default</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-olive-700 dark:text-olive-300 uppercase">Description</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-olive-950 divide-y divide-olive-200 dark:divide-olive-800">
          <% @component[:parameters].each do |param| %>
            <tr>
              <td class="px-4 py-3 text-sm font-mono text-olive-900 dark:text-olive-100">
                <%= param[:name] %>
              </td>
              <td class="px-4 py-3 text-sm text-olive-700 dark:text-olive-300">
                <code class="text-xs bg-olive-100 dark:bg-olive-900 px-2 py-1 rounded"><%= param[:type] %></code>
              </td>
              <td class="px-4 py-3 text-sm font-mono text-olive-700 dark:text-olive-300">
                <%= param[:default] %>
              </td>
              <td class="px-4 py-3 text-sm text-olive-700 dark:text-olive-300">
                <%= param[:description] %>
                <% if param[:options] %>
                  <div class="mt-1 text-xs">
                    Options: <code class="bg-olive-100 dark:bg-olive-900 px-1 py-0.5 rounded"><%= param[:options] %></code>
                  </div>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Examples -->
  <div>
    <h2 class="text-2xl font-display font-bold text-olive-900 dark:text-olive-100 mb-6">
      Examples
    </h2>
    <div class="space-y-12">
      <% @component[:examples].each do |example| %>
        <div class="border border-olive-200 dark:border-olive-800 rounded-lg overflow-hidden">
          <!-- Example Header -->
          <div class="bg-olive-50 dark:bg-olive-900 px-6 py-4 border-b border-olive-200 dark:border-olive-800">
            <h3 class="text-lg font-semibold text-olive-900 dark:text-olive-100">
              <%= example[:title] %>
            </h3>
            <% if example[:description] %>
              <p class="text-sm text-olive-700 dark:text-olive-300 mt-1">
                <%= example[:description] %>
              </p>
            <% end %>
          </div>

          <!-- Preview -->
          <div class="bg-white dark:bg-olive-950 px-6 py-8">
            <div class="flex items-center gap-4 flex-wrap">
              <% begin %>
                <%= render inline: example[:code], type: :erb %>
              <% rescue => e %>
                <p class="text-red-600 dark:text-red-400 text-sm">
                  Preview error: <%= e.message %>
                </p>
              <% end %>
            </div>
          </div>

          <!-- Code -->
          <div class="bg-olive-900 dark:bg-olive-950 px-6 py-4">
            <div class="flex items-center justify-between mb-3">
              <span class="text-xs font-medium text-olive-400 uppercase">ERB</span>
              <button type="button"
                      data-controller="copy-to-clipboard"
                      data-copy-to-clipboard-text-value="<%= example[:code].gsub('"', '&quot;') %>"
                      data-action="click->copy-to-clipboard#copy"
                      class="text-xs text-olive-400 hover:text-olive-300 flex items-center gap-1">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
                <span data-copy-to-clipboard-target="buttonText">Copy</span>
              </button>
            </div>
            <pre class="text-sm text-olive-100 overflow-x-auto"><code><%= example[:code] %></code></pre>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
