<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h1 class="text-center font-display text-4xl text-olive-950 dark:text-olive-50">
      <%= Rails.application.class.module_parent_name %>
    </h1>
    <h2 class="mt-4 text-center text-lg text-olive-600 dark:text-olive-400">
      Sign in to your account
    </h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div>
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          required: true,
          placeholder: "Email address",
          class: "block w-full rounded-lg border-0 bg-white px-3.5 py-2.5 text-olive-950 shadow-sm ring-1 ring-inset ring-olive-300 placeholder:text-olive-400 focus:ring-2 focus:ring-inset focus:ring-olive-600 sm:text-sm/6 dark:bg-olive-900 dark:text-olive-50 dark:ring-olive-700 dark:placeholder:text-olive-500 dark:focus:ring-olive-500" %>
      </div>

      <div>
        <div class="flex items-center justify-end">
          <%= link_to "Forgot password?", new_password_path(resource_name),
            class: "text-sm font-semibold text-olive-600 hover:text-olive-500 dark:text-olive-400 dark:hover:text-olive-300" %>
        </div>
        <div class="mt-2">
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password,
            autocomplete: "current-password",
            required: true,
            placeholder: "Password",
            class: "block w-full rounded-lg border-0 bg-white px-3.5 py-2.5 text-olive-950 shadow-sm ring-1 ring-inset ring-olive-300 placeholder:text-olive-400 focus:ring-2 focus:ring-inset focus:ring-olive-600 sm:text-sm/6 dark:bg-olive-900 dark:text-olive-50 dark:ring-olive-700 dark:placeholder:text-olive-500 dark:focus:ring-olive-500" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-3">
          <%= f.check_box :remember_me, class: "size-4 rounded border-olive-300 text-olive-600 focus:ring-olive-600 dark:border-olive-600 dark:bg-olive-800 dark:focus:ring-olive-500" %>
          <%= f.label :remember_me, class: "text-sm text-olive-700 dark:text-olive-300" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Sign in",
          class: "flex w-full justify-center rounded-lg bg-olive-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-olive-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-olive-600 transition-colors duration-150 cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm text-olive-500 dark:text-olive-400">
      Don't have an account?
      <%= link_to "Sign up", new_registration_path(resource_name),
        class: "font-semibold text-olive-600 hover:text-olive-500 dark:text-olive-400 dark:hover:text-olive-300" %>
    </p>
  </div>
</div>
