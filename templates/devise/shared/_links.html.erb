<%- if controller_name != 'sessions' %>
  <div>
    <%= link_to "Sign in", new_session_path(resource_name),
      class: "font-semibold text-olive-600 hover:text-olive-500 dark:text-olive-400 dark:hover:text-olive-300" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div>
    <%= link_to "Sign up", new_registration_path(resource_name),
      class: "font-semibold text-olive-600 hover:text-olive-500 dark:text-olive-400 dark:hover:text-olive-300" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div>
    <%= link_to "Forgot your password?", new_password_path(resource_name),
      class: "font-semibold text-olive-600 hover:text-olive-500 dark:text-olive-400 dark:hover:text-olive-300" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name),
      class: "font-semibold text-olive-600 hover:text-olive-500 dark:text-olive-400 dark:hover:text-olive-300" %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name),
      class: "font-semibold text-olive-600 hover:text-olive-500 dark:text-olive-400 dark:hover:text-olive-300" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider),
        data: { turbo: false },
        class: "flex w-full justify-center rounded-lg border border-olive-300 bg-white px-3.5 py-2.5 text-sm font-semibold text-olive-900 shadow-sm hover:bg-olive-50 transition-colors duration-150 cursor-pointer dark:border-olive-700 dark:bg-olive-800 dark:text-olive-100 dark:hover:bg-olive-700" %>
    </div>
  <% end %>
<% end %>
